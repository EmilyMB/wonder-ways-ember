<h3>{{model.name}}</h3>
<p class="trail-info">{{model.city}}, {{model.state}}</p>
<div class="container">
  <div class="row">

    <div class="col-md-6">
      <div id="trail-map" class="map">
        {{trail-map trail=model}}
      </div>
    </div>


    <div class="col-md-6">
      <button {{action 'filter' '.activites' }}>Activities</button>
      <button {{action 'filter' '.birds' }}>Birds</button>
      <button {{action 'filter' '.animals' }}>Animals</button>
      <button {{action 'filter' '.plants' }}>Plants</button>
      <div class="all">
        <ul class="activities categoryType" hidden=true>
          {{#each activity in model.activities}}
          <li><a href="{{activity.url}}">{{activity.activity_type_name}}</a></li>
          {{/each}}
        </ul>

        <ul class="animals categoryType" hidden=true>
          {{#each animals as |animal|}}
          <li><a href="{{animal.photo_url}}"><img src="{{animal.photo_url}}" class="img-rounded" alt="Cinque Terre" width="152" height="118"></a> {{animal.scientific_name}} {{animal.common_name}}</li>
          {{/each}}
        </ul>

        <ul class="plants categoryType" hidden=true>
          {{#each plants as |plant| }}
          <li><a href="{{plant.photo_url}}"><img src="{{plant.photo_url}}" height="80px"></a> {{plant.scientific_name}} {{plant.common_name}}</li>
          {{/each}}
        </ul>


        <ul class="birds categoryType" hidden=true>
          {{#each birds as |bird|}}
            <li><a href="{{bird.clip_url}}">Bird Sound</a></li>
          {{/each}}
        </ul>
      </div>
    </div>

  </div>
</div>
